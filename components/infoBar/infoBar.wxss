/* components/infoBar/infoBar.wxss */

.infoBar {
  width: cale(100% - 144rpx);
  padding: 19rpx 28rpx;
  margin-top: 10rpx;
  height: 162rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 1px 1px 3px 1px rgba(176, 179, 182, 0.27);
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.infoTop {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.infoText {
  width: calc(100% - 214rpx);
  height: 120rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.infoImg {
  width: 180rpx;
  height: 120rpx;
}

.infoBottom {
  width: 100%;
  color: #666;
  font-size: 22rpx;
  line-height: 34rpx;
  font-weight: 300;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.name {
  margin-right: 44rpx;
}
