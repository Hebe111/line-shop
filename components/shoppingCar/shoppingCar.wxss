/* components/shoppingCar.wxss */
.shoppingBar{
  position: absolute;
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
  height: 106rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shoppingBarLeft{
  display: flex;
  align-items: center;
}

.shoppingBarText{
  height: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  color: #999999;
  font-size: 20rpx;
}

.shoppingBarText .noGoods{
  font-size: 28rpx;
}

.shoppingBarText .price{
  font-size: 28rpx;
  color: #FD4647;
}

.shoppingBarText .price text{
  font-size: 20rpx;
  color: #BBBBBB;
  text-decoration: line-through;
}

.shoppingBarText .discount{
  font-size: 20rpx;
  color: #BBBBBB;
}

.shoppingBar image{
  width: 74rpx;
  height: 70rpx;
  margin-right: 30rpx;
}

.hasGoods{
  position: relative;
}

.hasGoods .count{
  position: absolute;
  top: -5rpx;
  right: 15rpx;
  width: 26rpx;
  height: 26rpx;
  color: white;
  font-size: 20rpx;
  background: #FFBF00;
  border-radius: 13rpx;
  text-align: center;
  line-height: 26rpx;
}

.shoppingBar .button{
  width: 186rpx;
  height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  border: none;
  color: #999999;
  font-size: 28rpx;
  background: #F3F5FB;
}

.shoppingBar .settlement{
  color: white;
  background: #FE4648;
}

.goodsBar{
  position: absolute;
  top: 84rpx;
  bottom: 106rpx;
  left: 0rpx;
  right: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.goodsBar .left{
  width: 180rpx;
  height: 100%;
  background: #F3F5FB;
}

.label{
  width: 180rpx;
  height: 126rpx;
  position: relative;
  text-align: center;
  line-height: 126rpx;
  color: #656565;
  font-size: 26rpx;
}

.actived{
  color: #FD4547;
  background: white;
}

.activedLine{
  width: 10rpx;
  height: 30rpx;
  border-radius: 5rpx;
  position: absolute;
  left: 0rpx;
  top: 48rpx;
  background: #FD4547;
}

.goodsBar .left image{
  width: 21rpx;
  height: 23rpx;
  position: absolute;
  top: 35rpx;
  right: 28rpx;
}

.goodsBar .right{
  width: calc(100% - 200rpx);
  height: 100%;
  overflow: scroll;
}

.goodsList{
  /* width: 100%; */
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #EBEDF5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goodsList image{
  width: 150rpx;
  height: 150rpx;
}

.goodsList .goodsInfo{
  width: calc(100% - 170rpx);
  display: flex;
  flex-direction: column;
}

.goodsList .goodsInfo .title{
  color: #000000;
  font-size: 24rpx;
  max-height: 70rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goodsList .goodsInfo .describe{
  color: #999999;
  font-size: 20rpx;
}

.toolBar{
  margin-top: 8rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.tagAndPrice .tag text{
  padding: 0 10rpx;
  margin-right: 5rpx;
  background: #FFE8E8;
  border-radius: 20rpx;
  color: #FD4647;
  font-size: 20rpx;
}

.tagAndPrice .price{
  color: #FD4647;
  font-size: 28rpx;
}

.tagAndPrice .price text{
  color: #BBBBBB;
  font-size: 20rpx;
  margin-left: 5rpx;
  text-decoration-line: line-through;
}

.timeAndBuy{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}

.timeAndBuy .countDown{
  color: #FD4647;
  font-size: 20rpx;
}

.quantityBar{
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.quantityBar image{
  width: 42rpx;
  height: 42rpx;
}

.quantityBar input{
  margin: 0 15rpx;
  width: 45rpx;
  text-align: center;
  font-size: 26rpx;
}

.timeAndBuy .immediately{
  width: 120rpx;
  height: 48rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 48rpx;
  color: white;
  font-size: 24rpx;
  background: #FD4547;
}

.startCountDown{
  width: 120rpx;
  height: 48rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 48rpx;
  color: white;
  font-size: 24rpx;
  background: #FD4547;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  line-height: 24rpx;
}

.shoppingMask{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 110rpx;
  background: rgba(0,0,0,0.66);
  z-index: 10;
}

.maskContent{
  position: fixed;
  bottom: 110rpx;
  left: 0rpx;
  right: 0rpx;
  width: 100%;
  overflow: hidden;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 20;
}

.maskContent .tool{
  margin: 20rpx 20rpx 10rpx 20rpx;
  display: flex;
  height: 60rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.maskContent .tool image{
  width: 22rpx;
  height: 24rpx;
}

.maskContent .tool .tag{
  color: #333333;
  font-size: 28rpx;
}

.maskContent .tool .clear{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.maskContent .tool .clear text{
  color: #999999;
  font-size: 24rpx;
  margin-left: 12rpx;
}

.shoppingList{
  overflow-y: scroll;
  max-height: 700rpx;
}

.shoppingCarList{
  padding: 20rpx;
}