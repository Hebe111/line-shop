/* pages/commodity//settlement/settlement.wxss */
page{
  background: #F4F6FC;
}
.settlementContainer{
  padding: 20rpx;
  margin-bottom: 110rpx;
}

.total{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  padding-right: 40rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: white
}

.total text{
  color: #333333;
  font-size: 28rpx;
}

.total .pay{
  width: 186rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: #FE4648;
  margin-left: 25rpx;
}

.buyerInfo{
  padding: 20rpx;
  border-radius: 20rpx;
  background: white;
}
.selectTypeButtonGroup{
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #FE4648;
  border-radius: 10rpx;
}

.selectTypeButtonGroup .button{
  width: calc(100% /2);
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #FE4648;
  font-size: 26rpx;
}

.selectTypeButtonGroup .isActive{
  color: white;
  background: #FE4648;
}

.takeOverInfo{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.takeOverInfo .info{
  width: calc(100% - 50rpx);
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}

.takeOverInfo .info .baseinfo{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin-left: 10rpx;
}

.baseinfo .nameAndPhone{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333333;
  font-size: 28rpx;
}

.baseinfo .address{
  margin-top: 20rpx;
  color: #333333;
  font-size: 26rpx;
}

.selfRaisingInfo{
  height: 76rpx;
  border-bottom: 1rpx solid #F4F6FC;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333333;
  font-size: 28rpx;
}

.selfRaisingTime{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.tip{
  color: #FE4648;
  font-size: 24rpx;
  margin-top: 18rpx;
}

.goodsList,.deliveryInstructions,.orderDetails{
  padding: 30rpx 20rpx 30rpx 20rpx;
  border-radius: 20rpx;
  background: white;
  margin-top: 20rpx;
}

.goodsListTitle,.instructionsTitle,.orderTitle{
  color: #333333;
  font-size: 28rpx;
}

.goodsItem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #F4F6FC;
  padding: 20rpx 0 20rpx 20rpx;
}

.goodsItem image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.goodsBaseInfo{
  width: calc(100% - 160rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 140rpx;
  margin-left: 20rpx;
}

.goodsBaseInfo .title{
  color: #000000;
  font-size: 28rpx;
  height: 70rpx;
  text-align: left;
  width: 100%;
}

.priceAndQnantity{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.priceAndQnantity .price{
  color: #FE4648;
}

.priceAndQnantity .price .quantity{
  color: #333333;
}

.instructionsItem{
  padding: 20rpx 0 0 20rpx;
  color: #333333;
  font-size: 28rpx;
}

.orderItem{
  margin-top: 22rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333333;
  font-size: 28rpx;
}

.noBorder{
  border-bottom: none;
}

.paddingBottom0{
  padding-bottom: 0;
}

.timeTitle{
  color: #333333;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
}

.closeTime{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.slelectContent{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.selectDate{
  height: 535rpx;
  width: 250rpx;
  overflow-y: scroll;
  background: #F4F6FC;
}

.selectDate text{
  display: inline-block;
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  line-height: 100rpx;
}

.selectDate .active{
  background: white;
  color: #FE4648;
}

.selectTime{
  padding: 20rpx;
  width: calc(100% - 300rpx);
  height: 515rpx;
  overflow-y: scroll;
}

.timeItem{
  height: 100rpx;
  border-bottom: 2rpx solid #F4F6FC;
  line-height: 100rpx;
  color: #333333;
  font-size: 28rpx;
}